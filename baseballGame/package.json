{
  "name": "2dbaseball",
  "version": "1.0.1",
  "description": "2D Baseball â€” baseball game developed in HTML5, CSS and JavaScript.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "npm run build",
    "test": "jest --verbose"
  },
  "keywords": [
    "2D baseball",
    "baseball game",
    "sport game",
    "pixel art",
    "baseball simulator"
  ],
  "author": "Filip",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.2.0",
    "rcedit": "^4.0.1"
  },
  "build": {
    "appId": "com.filip.2dbaseball",
    "productName": "2D Baseball",
    "icon": "build/favicon.ico",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "baseballWeb/**/*",
      "package.json",
      "node_modules/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/favicon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
